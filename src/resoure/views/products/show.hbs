<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-8">
            <div class="product-item mt-4">
                <div class="img-product">
                        <a href="/products/{{products.slug}}" class="product-link "><img src="{{products.img}}" alt=""></a>
                </div>
                
                
                
                <p class="product-discript">{{products.discript}}</p>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4 product-wrap">
             <div class="product-price">
                <h3 class="product-name">{{products.name}}</h3>
                <h3>Giá bán: {{products.price}} VND</h3>
                <a href="/cart/add-to-cart/{{products._id}}" class="btn btn-raised btn-success pull-right">
                                <i class="fa fa-plus" aria-hidden="true"></i> Add to shopping cart
                </a>
             </div>
        </div>
    </div>
</div>